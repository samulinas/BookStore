@model IEnumerable<BookStore.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h2>Таблиця категорії</h2>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Додання категорії</a>
<br>
<br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва категорії</th>
            <th>Кількість</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Редагувати</a>
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Категорій не існує!</p>
}
