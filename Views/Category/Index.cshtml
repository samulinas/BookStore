@model IEnumerable<BookStore.Models.Category>

@{
    ViewData["Title"] = "Category";
}
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Категорії</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="fa-regular fa-plus"></i> &nbsp; Додання нової категорії</a>
    </div>
</div>
<br><br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва категорії</th>
            <th>Порядок відображення</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary m-1"><i class="fa-regular fa-pen-to-square"></i> Редагувати</a>
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-1"><i class="fa-regular fa-trash-can"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Категорій не існує!</p>
}
